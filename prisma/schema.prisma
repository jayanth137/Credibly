generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Creator {
  youtubeId String   @id
  name      String
  videos    Videos[]
}

model Videos {
  cid         String   @id @default(cuid())
  url         String
  title       String
  description String
  tags        String[]
  thumbnail   String
  type        String
  validation  String
  creatorId   String
  videoId     String
  creator     Creator  @relation(fields: [creatorId], references: [youtubeId])

  @@unique([url, creatorId])
}
